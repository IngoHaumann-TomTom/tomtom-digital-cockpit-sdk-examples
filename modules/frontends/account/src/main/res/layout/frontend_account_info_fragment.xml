<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tomtom.ivi.example.frontend.account.info.AccountInfoViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/frontend_account_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/black"
            android:contentDescription="@string/frontend_account_info_avatar_description"
            android:scaleType="fitStart"
            android:src="@drawable/frontend_account_info_avatar_placeholder" />

        <com.tomtom.tools.android.api.uicontrols.textview.TtTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/tt_spacing_xxxl"
            android:gravity="start"
            android:text="@{@string/frontend_account_info_welcome_message(viewModel.displayName)}"
            android:textAlignment="textStart"
            android:textColor="?attr/tt_surface_content_color_emphasis_high"
            auto:ttTextAppearance="h3"
            auto:ttTextWeight="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="?attr/tt_spacing_l" />

        <com.tomtom.tools.android.api.uicontrols.button.TtButton
            style="?attr/tt_button_style"
            android:layout_width="match_parent"
            android:onClick="@{() -> viewModel.onLogoutClick()}"
            android:text="@string/frontend_account_logout_button_text"
            auto:ttActionType="primary" />
    </LinearLayout>

</layout>
