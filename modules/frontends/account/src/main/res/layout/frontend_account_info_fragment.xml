<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tomtom.ivi.example.frontend.account.info.AccountInfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="?attr/ttivi_color_black"
            android:contentDescription="@string/frontend_account_info_avatar_description"
            android:scaleType="fitStart"
            android:src="@drawable/frontend_account_info_avatar_placeholder" />

        <com.tomtom.ivi.core.common.uicontrols.view.TtiviTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="64dp"
            android:gravity="start"
            android:text="@{@string/frontend_account_info_welcome_message(viewModel.displayName)}"
            android:textAlignment="textStart"
            android:textColor="?attr/ttivi_color_text_primary"
            auto:ttiviTextSizeIdentifier="H3"
            auto:ttiviTextWeight="bold" />
    </LinearLayout>

</layout>
