<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tomtom.ivi.example.frontend.hierarchy.child.HierarchyChildViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/frontend_hierarchy_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <com.tomtom.tools.android.api.uicontrols.navigationbar.TtNavigationBar
            android:id="@id/tt_navigationbar"
            style="?attr/tt_navigationbar_style"
            auto:layout_constraintStart_toStartOf="parent"
            auto:layout_constraintTop_toTopOf="parent" />

        <com.tomtom.tools.android.api.uicontrols.textview.TtTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/tt_spacing_xxxl"
            android:gravity="start"
            android:text="@{viewModel.selectedItem}"
            android:textAlignment="textStart"
            android:textColor="?attr/tt_color_text_primary"
            auto:ttTextAppearance="h3"
            auto:ttTextWeight="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="?attr/tt_spacing_l" />

        <com.tomtom.tools.android.api.uicontrols.button.TtButton
            style="?attr/tt_button_style"
            android:layout_width="match_parent"
            android:onClick="@{() -> viewModel.onGoToChildClick(viewModel.children[0])}"
            android:text="@{viewModel.children[0].buttonStringResolver}"
            auto:ttActionType="primary" />

    </LinearLayout>

</layout>
