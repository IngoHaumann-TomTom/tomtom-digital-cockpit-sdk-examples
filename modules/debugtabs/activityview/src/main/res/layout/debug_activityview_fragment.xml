<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tomtom.ivi.example.debugtab.activityview.ActivityViewDebugViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tomtom.tools.android.api.uicontrols.textview.TtTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ttivi_debug_activityview_info" />

        <com.tomtom.tools.android.api.uicontrols.button.TtButton
            android:id="@+id/debug_activity_panel_button"
            style="?attr/tt_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/tt_spacing_m"
            android:enabled="@{viewModel.isButtonEnabled}"
            android:onClick="@{() -> viewModel.onButtonClicked()}"
            android:text="@string/ttivi_debug_activityview_button"
            auto:ttActionType="secondary" />
    </LinearLayout>
</layout>
